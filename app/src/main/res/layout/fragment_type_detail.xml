<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_default">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tipo"
        android:id="@+id/textViewCategory"
        android:layout_x="157dp"
        android:layout_y="17dp"
        android:textColor="#ff000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome do Item"
        android:id="@+id/textViewName"
        android:layout_x="150dp"
        android:layout_y="44dp"
        android:textColor="#ff163aff"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maior velocidade registrada:"
        android:id="@+id/textView"
        android:layout_x="81dp"
        android:layout_y="91dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="XXX KM/H"
        android:id="@+id/textViewMaximumMeasuredVelocity"
        android:layout_x="142dp"
        android:layout_y="117dp"
        android:textColor="#ffff2521" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Média de velocidade excedida"
        android:id="@+id/textView222"
        android:layout_x="69dp"
        android:layout_y="170dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="XXX KM/H"
        android:id="@+id/textViewAverageExceded"
        android:layout_x="142dp"
        android:layout_y="197dp"
        android:textColor="#ffff2521" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total de multas:"
        android:id="@+id/textView19"
        android:layout_x="122dp"
        android:layout_y="261dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="XXX KM/H"
        android:id="@+id/textViewTotalTickets"
        android:layout_x="160dp"
        android:layout_y="287dp"
        android:textColor="#ffff2521" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total de Modelos"
        android:id="@+id/textViewExtraText"
        android:layout_x="118dp"
        android:layout_y="361dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="XXX KM/H"
        android:id="@+id/textViewTotalModels"
        android:layout_x="170dp"
        android:layout_y="387dp"
        android:textColor="#ffff2521" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comparar"
        android:id="@+id/compareButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_x="138dp"
        android:layout_y="463dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:id="@+id/textViewDesc"
        android:layout_x="16dp"
        android:layout_y="414dp" />
</AbsoluteLayout>