<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.modesteam.pardal.AboutFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lay">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pardal025" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versão 1.0"
            android:id="@+id/textViewVersion"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:text="Sobre o Aplicativo:"
            android:id="@+id/textView11"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:text="     O aplicativo Pardal tem como objetivo tornar os dados relativos à multas e infrações cometidas em todas as rodovias federais do país nos anos de 2011 a 2013 mais acessíveis e legíveis a população"
            android:id="@+id/textViewAboutApp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <ImageView
            android:layout_width="239dp"
            android:layout_height="239dp"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/modesteam"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobre Modesteam:"
            android:id="@+id/textView13"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="     O time Modesteam é um grupo formado por estudantes de Engenharia de Software da UnB campus Gama, responsável pelo desenvolvimento do aplicativo Pardal por meio das matérias Métodos de Desenvolvimento de Software e Gestão de Produção e Portifólio. Conhecido por ser o time mais modesto que já existiu."
            android:id="@+id/textViewAboutTeam"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestores:"
            android:id="@+id/textView15"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewManagers"
            android:layout_gravity="center_horizontal"
            android:text=" Augusto Modesto\n Tainara Reis\n Cristóvão Frinhani\n Jonathan Moraes\n André Guedes\n " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desenvolvedores:"
            android:id="@+id/textView17"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDevelopers"
            android:layout_gravity="center_horizontal"
            android:text=" Rafael Akiyoshi\n Ricardo Canela\n Luís Henrique\n Lucas Rufino\n Laércio Junior\n Luís Filipe\n " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Icones e backgrounds:"
            android:id="@+id/textView17"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff000000" />
        <ImageView
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/designed"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</ScrollView>