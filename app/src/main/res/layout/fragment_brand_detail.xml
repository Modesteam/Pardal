<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/brand_detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Marca"
        android:id="@+id/textViewCategory"
        android:textColor="#ff000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="81dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome do Item"
        android:id="@+id/textViewName"
        android:textColor="#ff163aff"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textViewCategory"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maior velocidade registrada:"
        android:id="@+id/textView"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="91dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="XXX KM/H"
        android:id="@+id/textViewMaximumMeasuredVelocity"
        android:textColor="#ffff2521"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MÃ©dia de velocidade excedida"
        android:id="@+id/textView222"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="191dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="XXX KM/H"
        android:id="@+id/textViewAverageExceded"
        android:textColor="#ffff2521"
        android:layout_below="@+id/textView222"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total de multas:"
        android:id="@+id/textView19"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="291dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="XXX KM/H"
        android:id="@+id/textViewTotalTickets"
        android:textColor="#ffff2521"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/compareButton"
        android:background="@layout/on_selector_compare"
        android:layout_above="@+id/textViewCompare"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold|italic"
        android:text="Comparar"
        android:id="@+id/textViewCompare"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>