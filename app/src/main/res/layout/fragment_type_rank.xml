<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.modesteam.pardal.TypeRankFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qual tipo de ranking você gostaria?"
        android:textStyle="bold"
        android:id="@+id/textViewTitleTypeRank"
        android:textSize="20dp"
        android:textColor="#ff000000"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:id="@+id/button_averageExceded"
        android:layout_marginTop="20dp"
        android:layout_gravity="right|center_vertical"
        android:background="@layout/on_selector_rank_avg"
        android:layout_below="@+id/textViewTickets"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:id="@+id/button_maximumVelocity"
        android:layout_gravity="center"
        android:background="@layout/on_selector_rank_max"
        android:adjustViewBounds="true"
        android:layout_below="@+id/textViewTitleTypeRank"
        android:layout_alignLeft="@+id/button_totalTickets"
        android:layout_alignStart="@+id/button_totalTickets" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:id="@+id/button_totalTickets"
        android:layout_marginTop="20dp"
        android:layout_gravity="left|center_vertical"
        android:background="@layout/on_selector_rank_total"
        android:layout_below="@+id/textViewVelocity"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maior velocidade registrada"
        android:id="@+id/textViewVelocity"
        android:layout_below="@+id/button_maximumVelocity"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Média de velocidade excedida"
        android:id="@+id/textViewAverage"
        android:layout_below="@+id/button_averageExceded"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantidade de multas"
        android:id="@+id/textViewTickets"
        android:layout_below="@+id/button_totalTickets"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
